---
import HamburgerMenu from "./HamburgerMenu.astro";
import Navigation from "./Navigation.astro";
---

<header>
  <a href="/" class="logo">
    <img src="/AtoriE.png" alt="logo" />
  </a>
  <HamburgerMenu />
  <Navigation />
</header>

<style>
  header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    background-color: #000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
  }
</style>
