---
interface Props {
  link: string;
  text: string;
}

const { link, text } = Astro.props;
---

<!-- <p>{text}</p> -->
<a href="/" class="back">
  <span>
    {link}
  </span>
  {text}
</a>

<style>
  a{
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    background-color: #000;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    width: 240px;
    transition: 0.3s ease;
    span {
      text-decoration: underline;
    }
    &:hover {
      background-color: #333;
      transition: 0.3s ease;
    }
  }
</style>